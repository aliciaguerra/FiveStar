<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:scaleType="fitCenter"
        android:src="@drawable/frontofcar"
        android:id="@+id/button1"
        android:background="#ffffff"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:onClick="frontandrearpic"/>
    <ImageButton
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_below="@id/button1"
        android:src="@drawable/leftsideofcar"
        android:id="@+id/button2"
        android:onClick="sidepic"
        android:background="#ffffff" />
    <ImageButton
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_below="@id/button2"
        android:src="@drawable/rightsideofcar"
        android:onClick="sidepic"
        android:id="@+id/button3"
        android:background="#ffffff"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:layout_below="@id/button3"
        android:src="@drawable/backofcar"
        android:id="@+id/button4"
        android:background="#ffffff"
        android:onClick="frontandrearpic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Damaged Area"
        android:id="@+id/textView"
        android:textColor="#010000"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
