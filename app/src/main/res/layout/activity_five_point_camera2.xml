<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linlay"
    tools:context="com.example.haasith.fivestar.FivePointCamera2"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:id="@+id/topleft"
            android:background="#98dafc"
            android:text="2"
            android:textColor="#000000" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:layout_below="@id/topleft"
            android:id="@+id/bottomleft"
            android:padding="0dp"
            android:background="#312c32"
            android:text="BOTTOM   LEFT"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Please wait until everything is green to continue."
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bottomleft"
            android:textColor="#ffffffff"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_weight=".50"
        android:id="@+id/relay">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:id="@+id/linearLayout">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:id="@+id/topleft2"
                android:background="#98dafc"
                android:text="TOP           LEFT"
                android:textColor="#000000" />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:id="@+id/topright2"
                android:background="#feffff"
                android:text="3"
                android:textColor="#000000" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:id="@+id/center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#000000"
            android:layout_above="@+id/linearLayout2"
            android:text="1                                             CENTER" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout2">

            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:id="@+id/bottomleft2"
                android:background="#312c32"
                android:text="5"
                android:textColor="#ffffff" />
            <Button
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".5"
                android:id="@+id/bottomright2"
                android:background="#daad86"
                android:text="BOTTOM RIGHT"
                android:textColor="#ff000000" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".25">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:id="@+id/topright"
            android:textColor="#000000"
            android:background="#feffff"
            android:text="TOP         RIGHT" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="225dp"
            android:layout_below="@id/topright"
            android:id="@+id/bottomright"
            android:background="#daad86"
            android:text="4"
            android:textColor="#000000" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:id="@+id/nextbutton"
            android:layout_alignParentBottom="true"
            android:background="#98dafc"
            android:textColor="#000000"
            android:onClick="picturegrid"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp" />
    </RelativeLayout>



></LinearLayout>